<h1>Listing Invoices</h1>

<table>
    <tr>
        <th>id</th>
        <th>Item Description</th>
        <th>merchant_name</th>
    </tr>

    <% @invoices.each do |record| %>
        <tr>
            <td><%= record.id%></td>
            <td><%= record.item_description %></td>
            <td><%= record.merchant_name %></td>
        </tr>
    <% end %>
</table>