<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:purchaser_name) %>:</strong></dt>
  <dd><%= @invoice.purchaser_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_description) %>:</strong></dt>
  <dd><%= @invoice.item_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_price) %>:</strong></dt>
  <dd><%= @invoice.item_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:merchant_address) %>:</strong></dt>
  <dd><%= @invoice.merchant_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:merchant_name) %>:</strong></dt>
  <dd><%= @invoice.merchant_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              invoices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_path(@invoice), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
